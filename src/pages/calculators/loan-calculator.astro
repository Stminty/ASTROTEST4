---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import LoanCalculatorComponent from '../../components/LoanCalculatorComponent';

const title = 'Loan Payment Calculator';
const description = 'Calculate your monthly loan payments, total interest, and view amortization schedule.';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="p-4">
      <h1 class="text-4xl font-bold text-center mb-8">{title}</h1>
      <LoanCalculatorComponent client:load />
    </main>
    <Footer />
  </body>
</html>